        <div class="container" style="color:black;">
            <h2>Announcement</h2>
            <div class="row">
                <div class="col">
                    <form method="post" action="/admin/announcement">
                        <p>New announcement</p>
                        <textarea name="new_announcement" style="width: 600px;height: 100px;"></textarea><br>
                        <button class="btn btn-secondary" type="submit">Submit</button>
                    </form>
                    <div>
                        <br>
                        <p>All announcements</p>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=announcement.length-1;i>=0;i--) { %>
                                    <tr>
                                        <td><%= announcement[i].date %></td>
                                        <td><%= announcement[i].desc %></td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                        <a href="/admin/announcement/delete" role="button" class="btn btn-danger">Delete All</a>
                    </div>
                </div>
            </div>
        </div>
       
